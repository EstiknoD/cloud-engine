<div class="container p-3">
    <div class="row">
        <div class="card text-center card text-white bg-secondary mb-3">
            <h5 class="card-header">Enviar archivos</h5>
            <div class="card-body">
                <h5 class="card-title">Escriba a quien quiere enviar el archivo</h5>
                {{#each files}}
                <form action="/friends/send/{{id}}" method="POST">
                    <div class="form-group">
                        <input type="text" placeholder="Username de la persona a la que quieres enviar el archivo" name="person" class="form-control" autofocus>
                    </div>
                    <input type="submit" value="Enviar a la persona" class="btn btn-success">
                </form>
                {{/each}}
            </div>
        </div>
    </div>
</div>